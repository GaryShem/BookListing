<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="16dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_thumbnail"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:textColor="#424242"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            tools:text="Harry Potter and the Sorcerer's Stone" />

        <TextView
            android:id="@+id/list_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            tools:text="J.K. Rowling" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5.0" />

            <ImageView
                android:id="@+id/drawable_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_star_rate_black_18dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="4"
            android:textColor="#424242"
            android:textSize="12sp"
            tools:text="Harry is summoned to attend an infamous school for wizards, and he begins to discover some clues about his illustrious birthright. At this unusual school, Harry finds himself drawn deep inside a mystical world he never knew existed and closer to his own noble destiny." />


    </LinearLayout>


</LinearLayout>
